{
  "name": "danger-plugin-toolbox",
  "version": "1.15.0",
  "description": "Danger Plugin Toolbox is a Danger JS plugin containing a set of common validations and utilities, build to make it easy to start using Danger JS.",
  "license": "MIT",
  "engines": {
    "node": "^12.13.1",
    "npm": "^6.12.1"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:sogame/danger-plugin-toolbox.git"
  },
  "bugs": {
    "url": "https://github.com/sogame/danger-plugin-toolbox/issues"
  },
  "homepage": "https://github.com/sogame/danger-plugin-toolbox#readme",
  "author": {
    "email": "sogame@gmail.com",
    "name": "Sogame"
  },
  "keywords": [
    "danger",
    "danger-plugin"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "babel src --out-dir dist --ignore *.test.js,**/__mocks__/",
    "danger": "danger ci --failOnErrors",
    "format:packagejson": "format-package -w",
    "lint": "eslint . --ext .js",
    "lint:fix": "npm run lint -- --fix",
    "lint:fix:staged": "eslint . --fix",
    "lint:staged": "eslint .",
    "release": "node ./scripts/release.js",
    "spellcheck": "mdspell --report --en-gb --ignore-numbers --ignore-acronyms --no-suggestions",
    "spellcheck:ci": "npm run spellcheck -- '**/*.md' '!**/node_modules/**/*.md'",
    "pretest": "npx ensure-node-env",
    "test": "jest --silent=false",
    "test:coverage": "npm test -- --coverage",
    "test:watch": "npm test -- --watch",
    "update:changelog": "node ./scripts/update-changelog"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "**/!(package|package-lock).json": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "npm run lint:fix:staged --",
      "git add"
    ],
    "*.md": [
      "npm run spellcheck",
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "npm run format:packagejson",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/utils/index.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 99.6
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ]
  },
  "devDependencies": {
    "ajv": "^6.10.2",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-preset-env": "^1.7.0",
    "danger": "^9.2.9",
    "eslint-config-skyscanner-with-prettier": "^0.8.0",
    "format-package": "^5.2.0",
    "husky": "^3.1.0",
    "inquirer": "^7.0.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "markdown-spellcheck": "^1.3.1",
    "release-it": "^10.4.5",
    "semver": "^6.3.0"
  }
}
